- if current_candidate.forenames && current_candidate.surnames
  %li.sidebar-brand
    = link_to root_url do
      = current_candidate.forenames
      = current_candidate.surnames
- if controller_name == 'candidates'
  %li.selected
    = fa_icon "user"
    Mi Perfil Personal
- else
  %li
    = link_to edit_candidate_path(current_candidate.id) do
      = fa_icon "user"
      Datos Personales
