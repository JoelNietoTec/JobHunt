%nav.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{ "type" => "button", "data-toggle" => "collapse", "data-target" => "#navbar-main", "aria-expanded" => "false" }
        = fa_icon 'bars'
      = link_to '#menu-toggle', { :id => "menu-toggle", :class => "btn btn-sm btn-primary" } do
        = fa_icon 'bars'
      = link_to root_url, :class => "navbar-brand" do
        = image_tag "AnderSoft-Horizontal.png", :class => "navbar-logo"
    #navbar-main.navbar-collapse.collapse{ "aria-expanded" => "false", "style" => "height: 1px;"}
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", "href" => "#"}
            = fa_icon 'user'
            = current_user.email.downcase
            #b.caret
          %ul.dropdown-menu
            %li
              = link_to edit_user_path(current_user.id) do
                = fa_icon 'gears'
                Ajustes de Cuenta
            %li
              = link_to logout_path do
                = fa_icon 'power-off'
                Salir
